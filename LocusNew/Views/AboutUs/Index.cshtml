@model LocusNew.Core.ViewModels.AboutUsViewModel
@{
    ViewBag.Title = "O nama";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 about-writeup">
            <h1 class="heading blue">O nama</h1>
            <p>
                @Html.Raw(Model.Global.AboutUs)
            </p>
        </div>
        <div class="col-md-4 contact-info text-center">
            <p><img class="w-50" src="~/Content/Images/logo-main.png" alt="Locus Nekretnine" /></p>
            <p><h1 class="heading small blue">Locus Nekretnine</h1></p>
            <p class="mb-1"><a href="tel:@Model.Global.PhoneNumber"><i class="fas fa-phone"></i> @Model.Global.PhoneNumber</a></p>
            <p class="mb-1"><a href="tel:@Model.Global.FaxNumber"><i class="fas fa-fax"></i> @Model.Global.FaxNumber</a></p>
            <p class="mb-1"><a href="mailto:@Model.Global.Email"><i class="fas fa-at"></i> @Model.Global.Email</a></p>
            <p><i class="fas fa-map-marked-alt"></i> @Model.Global.Address</p>
            <p>
                <b>Radno vrijeme</b><br />
                ponedjeljak - petak<br />
                09:00 – 17:00<br />
                subota<br />
                10:00 – 13:00
            </p>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2877.2669495453447!2d18.372776315504147!3d43.85029537911499!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x5e921786031806b3!2sLOCUS+Nekretnine+d.o.o.!5e0!3m2!1sen!2sus!4v1534421697571" width="100%" height="350" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
    </div>
</div>

<div class="container-fluid">
    <h1 class="heading blue text-left">Naš tim</h1>
    <div class="row">
        @foreach (var agent in Model.Agents)
        {
            <div class="col-xl-3 col-md-6">
                <div class="card agent mb-3">
                    <img class="card-img-top agent-img" src="https://www.locus.ba/DynamicContent/UserImages/@agent.ImageName" alt="@agent.ImageName">
                    <div class="card-body text-center">
                        <h1 class="heading small">@agent.FullName</h1>
                        <h5 style="height: 55px;">@agent.Designation</h5>
                        <p class="card-text mb-1"><a href="tel:@agent.PhoneNumber">@agent.PhoneNumber</a></p>
                        <p class="card-text"><a href="mailto:@agent.Email">@agent.Email</a></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>