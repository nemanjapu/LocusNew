<!DOCTYPE html>
<html lang="bs">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <meta property="og:image" content="https://www.locus.ba/Content/images/logo-main.png">
    <meta property="og:image:type" content="image/png">
    <meta name="google-site-verification" content="5-JN-ClEWpvEiYYKdLkgKa5yGSkCbPRAqQhJuUBtkkM" />
    <title>@ViewBag.Title - Locus Nekretnine Sarajevo</title>
    @RenderSection("metatags", required: false)
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-124564842-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'UA-124564842-1');
    </script>
    @Styles.Render("~/Content/UserCss")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="top-bar">
        <div class="wrapper-big clearfix">
            <div class="phone-mail">
                <a href="tel:@LocusNew.Helpers.LayoutGetValues.GetPhone()"><i class="fas fa-phone-square"></i> @LocusNew.Helpers.LayoutGetValues.GetPhone()</a>
                <a href="mailto:@LocusNew.Helpers.LayoutGetValues.GetEmail()"><i class="fas fa-at"></i> @LocusNew.Helpers.LayoutGetValues.GetEmail()</a>
            </div>
            <div class="login">
                <a class="translate-a" href="javascript: void(0);"><i class="fas fa-globe"></i> <div id="google_translate_element"></div></a>
            </div>
        </div>
    </div>
    <div class="menu-cont">
        <div class="container-fluid">
            <div class="wrapper-big clearfix">
                <nav class="navbar navbar-expand-xl">
                    <a class="navbar-brand phone-logo" href="/">
                        <img src="/Content/images/logo-main.png" alt="Locus Nekretnine Sarajevo">
                    </a>
                    <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon">
                            <i class="fas fa-bars"></i>
                        </span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href="@Url.Action("Index", "Selling")">Prodaja</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Search")">Kupovina</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Repurchase", "Selling")">Otkup</a>
                            </li>
                            <li class="nav-item logo-desktop">
                                <a class="navbar-brand" href="/">
                                    <img src="/Content/images/logo-main.png" alt="Locus Nekretnine Sarajevo">
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Search", new { @adType = 3 })">Novogradnja</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="@Url.Action("Index", "AboutUs")">O nama</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Sold", "Search")">Prodano</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    @RenderBody()
    <footer class="main-footer">
        <div class="wrapper-big clearfix">
            <div class="logo">
                <a target="_blank" href="https://www.struix.co/">
                    <img src="/Content/images/struix.png" alt="Struix">
                </a>
            </div>
            <div class="powered">
                Powered by
                <a href="https://www.struix.co/" target="_blank">STRUIX</a>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/userApp")
    @RenderSection("scripts", required: false)
    <script async src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    <script type="application/ld+json">
        {
        "@@context": "http://schema.org",
        "@@type": "RealEstateAgent",
        "name": "Locus Nekretnine Sarajevo",
        "image": {
        "@@type": "ImageObject",
        "url": "https://www.locus.ba/Content/images/logo-main.png",
        "height": "300",
        "width": "300"
        },
        "@@id": "",
        "url": "https://www.locus.ba/",
        "map": "https://goo.gl/maps/Dwye6hWYETz",
        "telephone": "+38733711100",
        "address": {
        "@@type": "PostalAddress",
        "streetAddress": "Bulevar Meše Selimovića do br. 33",
        "addressLocality": "Sarajevo",
        "postalCode": "71000",
        "addressCountry": "BA"
        },
        "geo": {
        "@@type": "GeoCoordinates",
        "latitude": 43.8503186,
        "longitude": 18.3728139
        },
        "openingHoursSpecification": [{
        "@@type": "OpeningHoursSpecification",
        "dayOfWeek": [
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday"
        ],
        "opens": "09:00",
        "closes": "17:00"
        },{
        "@@type": "OpeningHoursSpecification",
        "dayOfWeek": [
        "Saturday"
        ],
        "opens": "10:00",
        "closes": "13:00"
        }],
        "sameAs": [
        "@(String.IsNullOrEmpty(LocusNew.Helpers.LayoutGetValues.GetFacebook()) ? "" : LocusNew.Helpers.LayoutGetValues.GetFacebook())",
        "@(String.IsNullOrEmpty(LocusNew.Helpers.LayoutGetValues.GetInstagram()) ? "" : LocusNew.Helpers.LayoutGetValues.GetInstagram())",
        "@(String.IsNullOrEmpty(LocusNew.Helpers.LayoutGetValues.GetTwitter()) ? "" : LocusNew.Helpers.LayoutGetValues.GetTwitter())",
        "@(String.IsNullOrEmpty(LocusNew.Helpers.LayoutGetValues.GetLinkedin()) ? "" : LocusNew.Helpers.LayoutGetValues.GetLinkedin())",
        "@(String.IsNullOrEmpty(LocusNew.Helpers.LayoutGetValues.GetPinterest()) ? "" : LocusNew.Helpers.LayoutGetValues.GetPinterest())",
        "@(String.IsNullOrEmpty(LocusNew.Helpers.LayoutGetValues.GetYoutube()) ? "" : LocusNew.Helpers.LayoutGetValues.GetYoutube())",
        "https://plus.google.com/108977271364046213211"
        ]
        }
    </script>
</body>
</html>