                    @Html.TextBoxFor(m => m.File3, new { @class = "image-input-field inputfile", type = "file", data_multiple_caption = "" })
                    <label class="image-input-label" for="File3">
                        <figure>
                            <img id="File3img" src="/DynamicContent/CityPartsHomepage/@Model.CityPart3Image" alt="Preview Image" />
                        </figure>
                    </label>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-6">
            <div class="form-group">
                <label>Naselje 4</label>
                @Html.DropDownListFor(m => m.CityPart4Id, new SelectList(Model.CityParts, "Id", "Name"), "--------", new { @class = "form-control mb-3 global-settings-select" })
                <div>
                    @Html.TextBoxFor(m => m.File4, new { @class = "image-input-field inputfile", type = "file", data_multiple_caption = "" })
                    <label class="image-input-label" for="File4">
                        <figure>
                            <img id="File4img" src="/DynamicContent/CityPartsHomepage/@Model.CityPart4Image" alt="Preview Image" />
                        </figure>
                    </label>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-6">
            <div class="form-group">
                <label>Naselje 5</label>
                @Html.DropDownListFor(m => m.CityPart5Id, new SelectList(Model.CityParts, "Id", "Name"), "--------", new { @class = "form-control mb-3 global-settings-select" })
                <div>
                    @Html.TextBoxFor(m => m.File5, new { @class = "image-input-field inputfile", type = "file", data_multiple_caption = "" })
                    <label class="image-input-label" for="File5">
                        <figure>
                            <img id="File5img" src="/DynamicContent/CityPartsHomepage/@Model.CityPart5Image" alt="Preview Image" />
                        </figure>
                    </label>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-6">
            <div class="form-group">
                <label>Naselje 6</label>
                @Html.DropDownListFor(m => m.CityPart6Id, new SelectList(Model.CityParts, "Id", "Name"), "--------", new { @class = "form-control mb-3 global-settings-select" })
                <div>
                    @Html.TextBoxFor(m => m.File6, new { @class = "image-input-field inputfile", type = "file", data_multiple_caption = "" })
                    <label class="image-input-label" for="File6">
                        <figure>
                            <img id="File6img" src="/DynamicContent/CityPartsHomepage/@Model.CityPart6Image" alt="Preview Image" />
                        </figure>
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-block btn-success btn-save-listing"><i class="fa fa-check" aria-hidden="true"></i></button>
        </div>
    </div>
}

@section scripts{
    @Scripts.Render("~/bundles/Select2js")
    @Scripts.Render("~/bundles/globalSettingsJs")
}