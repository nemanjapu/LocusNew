<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    @Styles.Render("~/Content/AdminCSS")
    @RenderSection("styles", required: false)
</head>
<body class="adminbody">
    <div id="main">
        <div class="headerbar">
            <div class="headerbar-left">
                <a href="@Url.Action("Index", "Dashboard")" class="logo"> <img src="~/Content/images/logo-admin.png" alt="Alternate Text" /> <span>Locus</span></a>
            </div>
            <nav class="navbar-custom">
                <ul class="list-inline float-right mb-0">
                    <li class="list-inline-item dropdown notif">
                        <a class="nav-link dropdown-toggle nav-user" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                            <img src="https://www.locus.ba/DynamicContent/UserImages/@User.Identity.UserImage()" alt="Profile image" class="avatar-rounded">
                            @User.Identity.UserFullName() <i class="fa fa-chevron-down" aria-hidden="true"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right profile-dropdown">
                            <a href="@Url.Action("EditUser", "UsersManager", new { @id = User.Identity.GetUserId()})" class="dropdown-item notify-item">
                                <i class="fa fa-user"></i> <span>Profile</span>
                            </a>
                            <a href="@Url.Action("LogOff", "Account", new { area = "" })" class="dropdown-item notify-item">
                                <i class="fa fa-power-off"></i> <span>Logout</span>
                            </a>
                        </div>
                    </li>
                </ul>
                <ul class="list-inline menu-left mb-0">
                    <li class="float-left">
                        <button class="button-menu-mobile open-left">
                            <i class="fa fa-fw fa-bars"></i>
                        </button>
                    </li>
                </ul>
            </nav>
        </div>
        <!-- End Navigation -->
        <!-- Left Sidebar -->
        <div class="left main-sidebar">
            <div class="sidebar-inner leftscroll">
                <div id="sidebar-menu">
                    <ul>
                        <li class="submenu">
                            <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-object-group" aria-hidden="true"></i><span> Početna </span> </a>
                        </li>
                        <li class="submenu">
                            <a href="javascript: void(0);"><i class="fa fa-list" aria-hidden="true"></i> <span> Nekretnine </span> <span class="menu-arrow"></span></a>
                            <ul class="list-unstyled">
                                <li><a href="@Url.Action("Index", "ListingsManager")">Aktivne</a></li>
                                <li><a href="@Url.Action("ReservedListings", "ListingsManager")">Rezervisane</a></li>
                                <li><a href="@Url.Action("InactiveListings", "ListingsManager")">Neaktivne</a></li>
                                <li><a href="@Url.Action("SoldListings", "ListingsManager")">Prodane</a></li>
                                <li><a href="@Url.Action("AddListing", "ListingsManager")">Dodaj Nekretninu</a></li>
                            </ul>
                        </li>
                        <li class="submenu">
                            <a href="@Url.Action("Index", "BuyersAndSellers")"><i class="fa fa-handshake-o" aria-hidden="true"></i><span> Kupci i prodavci </span> </a>
                        </li>
                        <li class="submenu">
                            <a href="javascript: void(0);"><i class="fa fa-users" aria-hidden="true"></i> <span> Korisnici </span> <span class="menu-arrow"></span></a>
                            <ul class="list-unstyled">
                                <li><a href="@Url.Action("Index", "UsersManager")">Aktivni</a></li>
                                <li><a href="@Url.Action("InactiveUsers", "UsersManager")">Neaktivni</a></li>
                                <li><a href="@Url.Action("AddUser", "UsersManager")">Dodaj Korisnika</a></li>
                            </ul>
                        </li>
                        <li class="submenu">
                            <a href="@Url.Action("Index", "ShowingsManager")"><i class="fa fa-eye" aria-hidden="true"></i><span> Zakazani obilasci </span> </a>
                        </li>
                        <li class="submenu">
                            <a href="@Url.Action("Index", "MessagesManager")"><i class="fa fa-comments" aria-hidden="true"></i><span> Poruke </span> </a>
                        </li>
                        <li class="submenu">
                            <a href="@Url.Action("Index", "SellerLeadsManager")"><i class="fa fa-home" aria-hidden="true"></i><span> Otkup / prodaja </span> </a>
                        </li>
                        <li class="submenu">
                            <a href="@Url.Action("Index", "GlobalSettings")"><i class="fa fa-cogs" aria-hidden="true"></i><span> Globalne postavke </span> </a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <!-- End Sidebar -->
        <div class="content-page">
            <div class="content pt-3">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
        <footer class="footer">
            <span class="text-right">
                Copyright <a target="_blank" href="https://www.locus.ba/">Locus Nekretnine</a>
            </span>
            <span class="float-right">
                Powered by <a target="_blank" href="https://www.struix.co/"><b>Struix</b></a>
            </span>
        </footer>
    </div>

    @Scripts.Render("~/bundles/AdminScripts")
    @RenderSection("scripts", required: false)
</body>
</html>